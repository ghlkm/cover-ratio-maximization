import numpy as np 
mean=(.5, .5)
cov=[[1, -1], [-1, 1]]
np.random.multivariate_normal(mean, cov, (3, 4))
np.random.multivariate_normal(mean, cov, 3)
import matplotlib
import matplotlib.pyplot as plt
x, y = np.random.multivariate_normal(mean, cov, 5000).T
plt.plot(x, y, 'x')
plt.axis('equal')
 plt.show()
plt.show()
cov=[[1, -.95], [-.95, 1]]
x, y = np.random.multivariate_normal(mean, cov, 5000).T
plt.plot(x, y, 'x')
plt.axis('equal')
plt.show()
